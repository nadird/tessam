{% extends 'dashboard/base_dashboard.html.twig' %}

{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}

    <div class="row">
        <div class="col-12 col-md-6">
            <div class="row-table-header row">
                <div class="col-3 col-md-1 ">#</div>
                <div class="col-3 col-md-2 ">Name</div>
                <div class="col-3 col-md-2 ">Code</div>
                <div class="col-3 col-md-1">Lost</div>
                <div class="col-3 col-md-1">Won</div>
                <div class="col-12 col-md-4 ">Actions</div>
            </div>
            {% for lead_state in lead_states %}
                <div class="row-table-data row">
                    <div class="col-3 col-md-1 ">{{ lead_state.id }}</div>
                    <div class="col-3 col-md-2 ">
                        <span class="badge" style="color:{{lead_state.colorText}}; background-color: {{ lead_state.color }}; border-color: {{ lead_state.colorBorder }}">
                            {{ lead_state.name }}
                        </span>


                    </div>
                    <div class="col-3 col-md-2 ">{{ lead_state.code }}</div>
                    <div class="col-3 col-md-1 ">
                        <i class="fa fa-{{ lead_state.isLost ? 'check' : 'times' }}"></i>
                    </div>
                    <div class="col-3 col-md-1 ">
                        <i class="fa fa-{{ lead_state.isWon ? 'check' : 'times' }}"></i>
                    </div>
                    <div class="col-12 col-md-4 ">

                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('app_dashboard_config_leadState_show', {'id': lead_state.id}) }}" class="btn btn-outline-secondary">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="{{ path('app_dashboard_config_leadState_edit', {'id': lead_state.id}) }}" class="btn btn-outline-secondary">
                                <i class="fa fa-pencil"></i>

                            </a>
                            <a href="{{ path('app_dashboard_config_leadState_delete', {'id': lead_state.id}) }}" class="btn btn-outline-danger">
                                <i class="fa fa-trash-can"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row-table-data row">
                    <div class="col-12 ">No Records </div>
                </div>
            {% endfor %}

        </div>
        <div id="form" class="col-12 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>New Paiement type</h5>
                </div>
                <div class="card-body">
                    {{ include('dashboard/config/lead_state/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}