{% extends 'dashboard/base_dashboard.html.twig' %}

{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}
    <div class="row">
        <div class="col-12 col-md-8">
            <div class="row-table-header row">
                <div class="col-3 col-md-1 ">#</div>
                <div class="col-3 col-md-2 ">Name</div>
                <div class="col-3 col-md-2 ">Code</div>
                <div class="col-3 col-md-2">Code</div>
                <div class="col-3 col-md-2">is Final</div>
                <div class="col-12 col-md-3 ">Actions</div>
            </div>
            {% for provider_order_state in provider_order_states %}
                <div class="row-table-data row">
                    <div class="col-3 col-md-1 ">{{ provider_order_state.id }}</div>
                    <div class="col-3 col-md-2 ">{{ provider_order_state.name }}</div>
                    <div class="col-3 col-md-2 ">{{ provider_order_state.color }}</div>
                    <div class="col-3 col-md-2 ">{{ provider_order_state.code }}</div>
                    <div class="col-3 col-md-2 ">{{ provider_order_state.isFinal ? 'Yes' : 'No' }}</div>
                    <div class="col-12 col-md-3 ">

                        <div class="btn-group">
                            <a href="{{ path('app_dashboard_config_provider_order_state_edit', {'id': provider_order_state.id}) }}" class="btn btn-phoenix-primary">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('app_dashboard_config_provider_order_state_delete', {'id': provider_order_state.id}) }}" class="btn btn-phoenix-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row-table-data row">
                    <div class="col-12 ">No Records </div>
                </div>
            {% endfor %}

        </div>
        <div id="form" class="col-12 col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>New Provider Order State</h5>
                </div>
                <div class="card-body">
                    {{ include('dashboard/config/provider_order_state_config/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
