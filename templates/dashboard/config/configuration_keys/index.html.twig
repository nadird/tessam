{% extends 'dashboard/base_dashboard.html.twig' %}
{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="row-table-header row">
                <div class="col-3 col-md-1 ">#</div>
                <div class="col-3 col-md-4 ">Key</div>
                <div class="col-3 col-md-2 ">Value</div>
                <div class="col-12 col-md-5 ">Actions</div>
            </div>
            {% for configuration in configurations %}
                <div class="row-table-data row">
                    <div class="col-3 col-md-1 ">{{ configuration.id }}</div>
                    <div class="col-3 col-md-4 ">{{ configuration.configkey }}</div>
                    <div class="col-3 col-md-2 ">{{ configuration.configvalue }}</div>

                    <div class="col-12 col-md-5 ">

                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('app_dashboard_config_configurationKeys_edit', {'id':configuration.id}) }}" class="btn btn-sm btn-phoenix-primary">edit</a>
                            <a href="{{ path('app_dashboard_config_configurationKeys_delete', {'id':configuration.id}) }}" class="btn btn-sm btn-phoenix-primary">delete</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row-table-data row">
                    <div class="col-12 ">No Records </div>
                </div>
            {% endfor %}

        </div>
        <div id="form" class="col-12 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>New Configuration Key</h5>
                </div>
                <div class="card-body">
                    {{ include('dashboard/config/configuration_keys/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


