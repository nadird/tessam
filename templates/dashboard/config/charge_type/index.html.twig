{% extends 'dashboard/base_dashboard.html.twig' %}

{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}

    <div class="row">
        <div class="col-12 col-md-6">
            <div class="row-table-header row">
                <div class="col-3 col-md-1 ">#</div>
                <div class="col-3 col-md-2 ">Name</div>
                <div class="col-3 col-md-2 ">Code</div>
                <div class="col-3 col-md-2">Code</div>
                <div class="col-12 col-md-4 ">Actions</div>
            </div>
            {% for charge_type in charge_types %}
                <div class="row-table-data row">
                    <div class="col-3 col-md-1 ">{{ charge_type.id }}</div>
                    <div class="col-3 col-md-3 ">{{ charge_type.name }}</div>
                    <div class="col-3 col-md-3 ">{{ charge_type.code }}</div>
                    <div class="col-12 col-md-5 ">

                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('app_dashboard_config_charge_type_edit', {'id': charge_type.id}) }}" class="btn btn-phoenix-primary">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="{{ path('app_dashboard_config_charge_type_delete', {'id': charge_type.id}) }}" class="btn btn-phoenix-primary">
                                <i class="fa fa-trash-can"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row-table-data row">
                    <div class="col-12 ">No Records </div>
                </div>
            {% endfor %}

        </div>
        <div id="form" class="col-12 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>New Charge type</h5>
                </div>
                <div class="card-body">
                    {{ include('dashboard/config/charge_type/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
