{% extends 'dashboard/base_dashboard.html.twig' %}

{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}

    <div class="row">
        <div class="col-12 col-md-6">
            <div class="row-table-header row">
                <div class="col-3 col-md-2 ">#</div>
                <div class="col-3 col-md-3 ">Name</div>
                <div class="col-3 col-md-3 ">Percentage</div>
                <div class="col-12 col-md-4 ">Actions</div>
            </div>
            {% for c_project_state in c_project_states %}
                <div class="row-table-data row">
                    <div class="col-3 col-md-1 ">{{ c_project_state.id }}</div>
                    <div class="col-3 col-md-2 ">{{ c_project_state.name }}</div>
                    <div class="col-3 col-md-2 ">{{ c_project_state.percentage }}</div>

                    <div class="col-12 col-md-5 ">

                        <div class="btn-group">
                            <a href="{{ path('app_dashboard_config_cprojectState_show', {'id': c_project_state.id}) }}" class="btn btn-phoenix-primary">show</a>
                            <a href="{{ path('app_dashboard_config_cprojectState_edit', {'id': c_project_state.id}) }}" class="btn btn-phoenix-primary">edit</a>
                            <a href="{{ path('app_dashboard_config_cprojectState_delete', {'id': c_project_state.id}) }}" class="btn btn-phoenix-primary">delete</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row-table-data row">
                    <div class="col-12 ">No Records </div>
                </div>
            {% endfor %}

        </div>
        <div id="form" class="col-12 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>New Paiement type</h5>
                </div>
                <div class="card-body">
                    {{ include('dashboard/config/c_project_state/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}




