{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
    <h1>Compte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ compte.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ compte.code }}</td>
            </tr>
            <tr>
                <th>Color</th>
