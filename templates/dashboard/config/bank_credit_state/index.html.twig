{% extends 'dashboard/base_dashboard.html.twig' %}

{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}

    <div class="row">
        <div class="col-12 col-md-8">
            <div class="row-table-header row">
                <div class="col-3 col-md-2 ">#</div>
                <div class="col-3 col-md-3 ">Name</div>
                <div class="col-3 col-md-3 ">Percentage</div>
                <div class="col-12 col-md-4 ">Actions</div>
            </div>
            {% for bank_credit_state in bank_credit_states %}
                <div class="row-table-data row">
                    <div class="col-3 col-md-3 ">
                        <span class="badge" style=" background-color: {{ bank_credit_state.color }}; color: #ffffff;">
                        {{ bank_credit_state.name }}
                        </span>

                    </div>
                    <div class="col-3 col-md-2 ">{{ bank_credit_state.code }}</div>
                    <div class="col-3 col-md-2 ">{{ bank_credit_state.isValid?'Valid':'Non valid' }}</div>

                    <div class="col-12 col-md-5 ">

                        <div class="btn-group">
                            <a href="{{ path('app_dashboard_config_bien_additional_state_edit', {'id': bank_credit_state.id}) }}" class="btn btn-phoenix-primary">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('app_dashboard_config_bien_additional_state_delete', {'id': bank_credit_state.id}) }}" class="btn btn-phoenix-primary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row-table-data row">
                    <div class="col-12 ">No Records </div>
                </div>
            {% endfor %}

        </div>
        <div id="form" class="col-12 col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>New Cr√©dit State</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}