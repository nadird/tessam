<div {{ stimulus_controller('toast') }}>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="position-fixed  p-3" style="z-index: 1000000" >
            <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" data-toast-target="toast">
                <div class="toast-header text-{{ label }}">
                    <strong class="me-auto">Notification</strong>
                    <small>Maintenant</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
</div>