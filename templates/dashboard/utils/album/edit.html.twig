{% extends 'dashboard/base_dashboard.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('albums') }}
{% endblock %}


{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}
    <div class="row g-5">
        <div class=" col-12 col-md-8">
            <h4 class="mb-3">{{ album.name }}</h4>
            <div class="row g-5">
                {% for image in album.albumImages %}
                    <div class="col-12 col-md-4">
                    {% include('dashboard/_partials/_image_card.html.twig') %}
                    </div>
                {% else %}
                    <p>{{ 'No images found' | trans }}</p>
                {% endfor %}
            </div>

        </div>
        <div class=" col-12 col-md-4">
            <form class="dropzone dropzone-multiple p-0" id="dropzone-multiple" data-dropzone="data-dropzone" action="{{ path('dashboard_utils_album_upload_image_album', {
                id: album.id
            }) }}">
                <div class="fallback">
                    <input name="file" type="file" multiple="multiple" /></div>
                <div class="dz-message" data-dz-message="data-dz-message"><img class="me-2" src="{{ asset('/images/cloud-upload.svg') }}" width="25" alt="" />Drop your files here</div>
                <div class="dz-preview dz-preview-multiple m-0 d-flex flex-column">
                    <div class="d-flex mb-3 pb-3 border-bottom media">
                        <div class="border border-300 p-2 rounded-2 me-2">
                            <img class="rounded-2 dz-image" src="{{ asset('/images/file.png') }}" alt="..." data-dz-thumbnail="data-dz-thumbnail" /></div>
                        <div class="flex-1 d-flex flex-between-center">
                            <div>
                                <h6 data-dz-name="data-dz-name"></h6>
                                <div class="d-flex align-items-center">
                                    <p class="mb-0 fs--1 text-400 lh-1" data-dz-size="data-dz-size"></p>
                                    <div class="dz-progress"><span class="dz-upload" data-dz-uploadprogress=""></span></div>
                                </div><span class="fs--2 text-danger" data-dz-errormessage="data-dz-errormessage"></span>
                            </div>
                            <div class="dropdown font-sans-serif">
                                <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal dropdown-caret-none" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h"></span></button>
                                <div class="dropdown-menu dropdown-menu-end border py-2"><a class="dropdown-item" href="#!" data-dz-remove="data-dz-remove">{{ 'Remove
                                File' | trans }}</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>



    <a href="{{ path('dashboard_utils_album_index') }}">back to list</a>

    {{ include('dashboard/utils/album/_delete_form.html.twig') }}
{% endblock %}
