<div class="tab-pane" role="tabpanel" aria-labelledby="bootstrap-wizard-tab2" id="bootstrap-wizard-tab2" data-product-wizard-target="pane">
    {{ form_start(form_Images) }}
        <div class="row">
            <div class="dropzone dropzone-multiple p-0 mb-5 dz-clickable bg-soft-primary border border-dashed border-primary rounded"
                 data-controller="dropzoneProduct"
                 data-action="dropzone-product#upload"
                 data-dropzone-product-url="{{ path('app_dashboard_service_dropzone_product_upload', {'id': product.id}) }}"
                 id="dropzone"
            >
                <div class="dz-default dz-message ">
                    <span>{{ 'Drop files here to upload' | trans }}d</span>
                    <i class="fa fa-cloud-upload"></i>
                </div>
                <input type="hidden" name="product[images]" data-dropzoneProduct-target="url" value="{{ path('app_dashboard_service_dropzone_product_upload', {'id': product.id}) }}">
            </div>
            <h4>{{ 'Images' | trans }}</h4>
            <div class="col-12">
                <div class="d-flex justify-content-start" data-dropzone-product-target="images">
                    {% for image in product.images %}
                        {{ component('ProductImageComponent',{'image':image,'size':'small_product','product':product}) }}
                    {% endfor %}
                </div>
            </div>
        </div>
        {{ form_row(form_Images.shortDescription) }}
        {{ form_row(form_Images.longDescription) }}
        {{ form_row(form_Images.seoTitle) }}
        {{ form_row(form_Images.seoDescription) }}

    {{ form_end(form_Images) }}
</div>

