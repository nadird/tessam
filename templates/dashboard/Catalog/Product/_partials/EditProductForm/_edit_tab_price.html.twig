<div class="tab-pane fade" id="tab-price" role="tabpanel" aria-labelledby="price">
    <div class="border border-facebook p-2 mt-2">
        <h5 class=" m-2">Price</h5>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
            <div class="col">
                {{ form_row(form.priceHt) }}
            </div>
            <div class="col">
                {{ form_row(form.tax) }}
            </div>
            <div class="col">
                {{ form_row(form.priceTtc) }}
            </div>
        </div>
    </div>
    <div class="border border-facebook p-2 mt-2">
        <h5 class="m-2">Supply</h5>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
            <div class="col">
                {{ form_row(form.supplyPriceHt) }}
            </div>
            <div class="col">
                {{ form_row(form.supplyPriceTtc) }}
            </div>
            <div class="col">
                {{ form_row(form.supplier) }}
            </div>
        </div>
    </div>
    <div class="border border-facebook p-2 mt-2">
        <h5 class=" m-2">{{ 'Wholesale' | trans }}</h5>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
            <div class="col">
                {{ form_row(form.wholeSalePriceHt) }}
            </div>
            <div class="col">
                {{ form_row(form.wholeSalePriceTtc) }}
            </div>
            <div class="col">
                {{ form_row(form.wholeSaleMoq) }}
            </div>

        </div>
    </div>

    {{ form_row(form.shops) }}
    {{ form_row(form.weight) }}
    {{ form_row(form.availableDate) }}


</div>