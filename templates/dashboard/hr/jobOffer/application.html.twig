{% extends 'dashboard/base_dashboard.html.twig' %}

{% block title %}WebJobOffer index{% endblock %}

{% block body %}
    <h1>{{ 'WebJobOffer index' | trans }}</h1>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ 'Job Applicant' | trans }} </h3>
            </div>

            <div class="card-body">
                <p>  {{applicant.firstname}}</p>
                <p>  {{applicant.lastname}}</p>
                <p> {{applicant.email}}</p>
                <p> {{applicant.phone}}</p>
                <p> {{applicant.address}}</p>
                <p> {{applicant.dob | date}}</p>
                <p><a href="{{ asset('/uploads/resumes') }}/{{applicant.resume}}">{{ 'Resume' | trans }}</a> </p>
                <p> {{applicant.createdAt | date}}</p>
                <p> {{applicant.ip }}</p>

            </div>
        </div>
    </div>

{% endblock %}
