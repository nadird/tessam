{% extends 'dashboard/base_dashboard.html.twig' %}


{% block body %}
<div class="container">
    <div class="card">
        {{ form_start(form) }}
        <div class="card-header">
            <h3 class="card-title">{{ title|default('Create') }}</h3>
        </div>
        <div class="card-body">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.slug) }}
            {{ form_row(form.thumbnail) }}
            {{ form_row(form.image) }}
            {{ form_row(form.isActive) }}
            {{ form_row(form.parentCategories) }}
        </div>
        <div class="card-footer">
            <div class="btn-group d-flex">
                <a href="{{ path('app_dashboard_web_blog_category_index') }}" class="btn btn-phoenix-danger">
                    <i class="fa fa-arrow-left"></i>
                    {{ 'back to list' | trans }}
                </a>
                {{ form_widget(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
