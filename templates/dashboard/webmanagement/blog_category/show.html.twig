{% extends 'dashboard/base_dashboard.html.twig' %}

{% block title %}BlogCategory{% endblock %}

{% block body %}
    <h1>BlogCategory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ blog_category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog_category.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog_category.slug }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ blog_category.thumbnail }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog_category.image }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ blog_category.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blog_category.createdAt ? blog_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dashboard_web_blog_category_index') }}">back to list</a>

    <a href="{{ path('app_dashboard_web_blog_category_edit', {'id': blog_category.id}) }}">edit</a>

    {{ include('dashboard/webmanagement/blog_category/_delete_form.html.twig') }}
{% endblock %}
