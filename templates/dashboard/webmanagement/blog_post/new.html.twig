{% extends 'dashboard/base_dashboard.html.twig' %}

{% block title %}New BlogPost{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            {{ form_start(form) }}
            <div class="card-header">
                <h3 class="card-title">{{ title|default('Create') }}</h3>
            </div>
            <div class="card-body">
                {{ form_row(form.publicTitle) }}
                {{ form_row(form.seoTitle) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.body) }}
                {{ form_row(form.seoDescription) }}
                {{ form_row(form.imgOg) }}
                {{ form_row(form.thumbnail) }}
                {{ form_row(form.image) }}
                {{ form_row(form.isActive) }}
                {{ form_row(form.isFeatured) }}
                {{ form_row(form.categories) }}
                {{ form_row(form.relatedPosts) }}
                {{ form_row(form.author) }}
            </div>
            <div class="card-footer">
                <div class="btn-group d-flex">
                    <a href="{{ path('app_dashboard_web_blog_post_index') }}" class="btn btn-phoenix-danger">
                        <i class="fa fa-arrow-left"></i>
                        {{ 'back to list' | trans }}
                    </a>
                    {{ form_widget(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

