{% extends 'dashboard/base_dashboard.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
    <h1>BlogPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>PublicTitle</th>
                <td>{{ blog_post.publicTitle }}</td>
            </tr>
            <tr>
                <th>SeoTitle</th>
                <td>{{ blog_post.seoTitle }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blog_post.body }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ blog_post.thumbnail }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog_post.image }}</td>
            </tr>
            <tr>
                <th>SeoDescription</th>
                <td>{{ blog_post.seoDescription }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blog_post.createdAt ? blog_post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImgOg</th>
                <td>{{ blog_post.imgOg }}</td>
            </tr>
            <tr>
                <th>LastModified</th>
                <td>{{ blog_post.lastModified ? blog_post.lastModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ blog_post.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog_post.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dashboard_web_blog_post_index') }}">back to list</a>

    <a href="{{ path('app_dashboard_web_blog_post_edit', {'id': blog_post.id}) }}">edit</a>

    {{ include('dashboard/webmanagement/blog_post/_delete_form.html.twig') }}
{% endblock %}
