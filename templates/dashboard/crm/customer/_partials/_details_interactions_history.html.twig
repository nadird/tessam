<div class="tab-pane fade active show" id="tab-interactions" role="tabpanel" aria-labelledby="tab-interactions">
    <h2 class="mb-4">{{ 'Interactions' | trans }}</h2>
    <div class="mb-8" data-controller="comment">
        <hr>
        <div class="row align-items-center g-0 justify-content-start mb-3">
            <h5 class="mb-4">{{ 'New Interaction' | trans }}</h5>
            <div class="col-12 col-sm-auto">
                <div class=" mb-2 mb-sm-0" style="">
                    {% include('dashboard/crm/customer/_partials/_new_interaction_form.html.twig') %}
                </div>
            </div>
        </div>
        <hr>
        <div class="mb-4">
            <h5 class="mb-4">{{ 'Interaction Histories' | trans }}</h5>
            {% for interaction in interactions %}
                {% include('dashboard/crm/customer/_partials/_interaction_history.html.twig') %}
            {% else %}
                <div class="alert alert-danger ">
                    {{ 'Aucune interaction' | trans }}
                </div>
            {% endfor %}
            <hr>
        </div>
        <div class="mb-4">
            <h5 class="mb-4">{{ 'Interaction Histories lead' | trans }}</h5>
            {% for interaction in lead.interactionHistories %}
                {% include('dashboard/crm/leads/_partials/_interaction_history.html.twig') %}
            {% endfor %}
        </div>

    </div>
</div>
