{% extends 'dashboard/base_dashboard.html.twig' %}


{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}


<div class="row">
    <div class="col-12 col-md-8">
        <div class="row-table-header row">
            <div class="d-none d-md-block col-md-1">#</div>
            <div class="col-6 col-md-3 border-bottom border-md-0">{{ 'Name' |trans }}</div>
            <div class="col-6 col-md-2 border-bottom border-md-0">{{ 'Type' | trans }}</div>
            <div class="col-6 col-md-2 border-bottom border-md-0">{{ 'Date' | trans }}</div>
            <div class="col-6 col-md-1 border-bottom border-md-0">{{ 'IsActive' | trans }}</div>
            <div class="col-12 col-md-3 border-bottom border-md-0">{{ 'Actions' | trans }}</div>
        </div>
        {% for compaign in compaigns %}
            <div class="row-table-data row">
                <div class="d-none d-md-block col-md-1">#</div>
                <div class="col-6 col-md-3 border-bottom border-md-0">{{ compaign.name }}</div>
                <div class="col-6 col-md-2 border-bottom border-md-0">{{ compaign.type.code}}</div>
                <div class="col-6 col-md-2 border-bottom border-md-0">{{ compaign.dateAdd | format_datetime }}</div>
                <div class="col-6 col-md-1 border-bottom border-md-0">{{ compaign.isActive?'check':'xmark' }}</div>
                <div class="col-12 col-md-3 border-bottom border-md-0">
                    <div class="btn-group btn-group-sm">
                        <a href="{{ path('app_dashboard_crm_compaigns_compaign',{'id':compaign.id}) }}" class="btn btn-phoenix-success">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="" class="btn btn-phoenix-success">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="" class="btn btn-phoenix-success">
                            <i class="fa fa-trash"></i>
                        </a>

                    </div>
                </div>
            </div>
        {% else %}
            <div class="w-100">{{ 'No compaign yet' | trans }}</div>
        {% endfor %}
    </div>
    <div class="col-12 col-md-4 border border-start-md border-dashed p-3 ">
        <h5 class="border-bottom mb-3 pb-3">{{ 'New Compaign' | trans }}</h5>
        {{ form(form) }}
    </div>
</div>
{% endblock %}
