{% extends 'dashboard/base_dashboard.html.twig' %}


{% block body %}
    {% include('dashboard/_partials/_dashboard_page_header.html.twig') %}


    <div class="row">
        <div class="col-12 col-md-4">

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <b>{{ 'Compaign ID' | trans }} : </b>
                    {{ compaign.id }}
                </li>
                <li class="list-group-item">
                    <b>{{ 'Compaign Name' | trans }} : </b>
                    {{ compaign.name }}
                </li>
                <li class="list-group-item">
                    <b>{{ 'Compaign date Add' | trans }} : </b>
                    {{ compaign.dateAdd | format_datetime }}
                </li>
                <li class="list-group-item">
                    <b>{{ 'Compaign Active' | trans }} : </b>
                    {{ compaign.isActive? 'Yes' : 'No' }}
                </li>
                <li class="list-group-item">
                    <b>{{ 'Compaign Final URL' | trans }} : </b>
                    {{ compaign.finalUrl }}
                </li>
                <li class="list-group-item">
                    <b class="d-md-block">{{ 'Qr Code' | trans }} : </b>
                    <img src="{{ asset( '/uploads/qr') }}{{ compaign.qr }}" alt="" style="width: 100%">
                    <a href="{{ asset( '/uploads/qr') }}{{ compaign.qr }}" class="btn btn-phoenix-success btn-block"
                       download="{{ compaign.qr }}">
                        {{ 'Download' | trans }}
                    </a>
                </li>
                <li class="list-group-item">
                    <div class="btn-group d-flex flex-between-center">
                        <a href="#" class="btn btn-phoenix-success ">Stats</a>
                        <a href="#" class="btn btn-phoenix-warning ">Update</a>
                    </div>
                </li>
                

            </ul>

        </div>
        <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-body">
                <h4 class="p-2 border-bottom">{{ 'Compaign Description' | trans }}</h4>
                {{ compaign.text | raw }}

            {% if compaign.video %}

                <h4 class="p-2 border-bottom">{{ 'Compaign Video' | trans }}</h4>
                <video controls >
                    <source src="{{ asset('/uploads/public/')}}{{ compaign.video }}" type="video/webm" />
                </video>

            {% endif %} 
            {% if compaign.image %}

                <h4 class="p-2 border-bottom">{{ 'Compaign Image' | trans }}</h4>
                <img src="{{ asset('/uploads/public/')}}{{ compaign.image }}" alt="" style="width: 100%">

            {% endif %}
        </div>
        </div>
        
            
            
        </div>
    </div>
{% endblock %}
