{% extends '/web/base_web.html.twig' %}

{% block body  %}
    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url({{ asset('uploads/public/') }}{{ type.image }}); background-position: -25px -25px;">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-12 text-center">

                    <div class="mb-5 element-animate fadeInUp element-animated">
                        <h1 class="text-white">{{ type.publicTitle }}</h1>
                        {{ type.shortDescription  }}
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- END section -->
    <section class="mb-3">
        <div class="container">

            <div class="row">
                <div class="col-12 col-md-4">
                    <img src="{{ asset('uploads/public/') }}{{ type.thumb }}" alt="" class="w-100">
                </div>
                <div class="col-12 col-md-8">
                    <h2 class="title">Nos {{ type.publicTitle }}</h2>
                    <hr>
                    {{ type.text | raw }}
                </div>
            </div>
        </div>
        <hr>
    </section>
    <section>
        {% for project in projects %}

            <div class="container">
                <div class="row">
                    <h3 class="my-3">{{'Nos' | trans}} {{ type.publicTitle }} Ã  {{ project.project.publicName }}</h3>
                    {% for format in project.types %}
                        {% include('web/_partials/_format_bien_card.html.twig') %}
                    {% endfor %}
                <div class="my-3">
                    <a href="{{ path('app_product_project_page',{'slug':project.project.slug}) }}" class="link-success">
                        {{ 'Voir le projet' | trans }} {{ project.project.publicName }}
                        <i class="fa fa-arrow-right-long"></i>
                    </a>
                </div>
                </div>
            </div>
            <hr>
        {% endfor %}

    </section>
{% endblock %}