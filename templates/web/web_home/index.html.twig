{% extends '/web/base_web.html.twig' %}
{% block title %}{{website_name }} | {{ globalVariables.TheCompany.indexSubtitle }}{% endblock %}
 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('homePageWebStyle') }}
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

     {#   <script src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.3.7/dist/latest/bootstrap-autocomplete.min.js"></script> #} {{ encore_entry_link_tags('app') }}
     {# <link rel="stylesheet" href="assets/styles/custom.css"> #}
 {% endblock %}
{% block body %}
    <div class="">
        <div id="topwarper" class="videobackground">
            <header>

                <!-- This div is  intentionally blank. It creates the transparent black overlay over the video which you can modify in the CSS -->
                <div class="overlay"></div>

                <!-- The HTML5 video element that will create the background video on the header -->
                <video id="background--vid" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                    <source src="{{ asset('/uploads/the_company') }}/{{ globalVariables.TheCompany.videoHome }}" type="video/mp4">
                </video>
                <div class="extra-white-top"></div>
                <div id="Waves" style="    position: absolute;bottom: 0;width: 100%;z-index: 100;">
                    <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                         viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
                        <defs>
                            <path id="gentle-wave"
                                  d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"/>
                        </defs>
                        <g class="parallax">
                            <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7"/>
                            <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)"/>
                            <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)"/>
                            <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff"/>
                        </g>
                    </svg>
                </div>
                <!-- The header content -->
                <div class="container h-100">
                    <div class="d-flex h-100 text-center align-items-center">
                        <div class="w-100 text-white">

                            <h1 class="display-3">
                                {{ globalVariables.TheCompany.indexTitle }}
                            </h1>
                            <p class="lead mb-0"> {{ globalVariables.TheCompany.indexSubtitle }} </p>
                        </div>
                    </div>

                </div>


            </header>

        </div>
    </div>

    <section id="apropos" class="apropos" style="background-color: #ffffff">
        <div class="container-md">
            <div class="row">
                <div class="col-md-6 col-sm-12" style="overflow-x: hidden;">
                    <img src="{{ asset('/uploads/the_company') }}/{{ globalVariables.TheCompany.imageHome }}" alt="{{ globalVariables.TheCompany.indexTitle }}" style="width: 100%;" >
                </div>
                <div class="col-md-6 col-sm-12 p-4">
                    <div>
                        {{ globalVariables.TheCompany.shortDescription|raw }}
                    </div>
                    <a href="#" class="btn btn-evact fullwidth"> {{ "En Savoir plus"|trans }}</a>
                </div>
            </div>

        </div>
    </section>
    {% set numberProject = (projects|length) %}
    {% if numberProject > 1  %}
    <section id="Projects" style="background-color: #f2f7ff;">
        <div class="container">
            <div id="titleTypes" class="d-flex align-content-center flex-center">
                <h2 class="display-4 mb-3 ">{{ 'Nos Projets' | trans }}</h2>
            </div>

            <div class="row mb-3 swiper" {{ stimulus_controller('project_carousel') }}>
                <div class="swiper-wrapper">

                    {% for project in projects %}
                        {% include('web/_partials/_project_card.html.twig') %}
                    {% endfor %}

                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-scrollbar"></div>
            </div>
            <a href="#parFormat" class="link-danger fw-bold mt-3">
                Voir tous les biens
                <span class="fa fa-arrow-right-long"></span>
            </a>
        </div>

    </section>
    {% endif %}
    <section id="Types" style="background-color: #f2f7ff;" >
        <div class="container swiper" {{ stimulus_controller('project_carousel') }}>
            {% include('web/_partials/_types_in_home_page.html.twig') %}
            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-scrollbar"></div>
        </div>

    </section>
    <section class="p-0" >
    {% include('web/web_home/_project_presentation.html.twig') %}
    </section>
    <section>
        <div id="parFormat" class="d-flex align-content-center flex-center">
            <h2 class="display-4 mb-3 ">{{ 'Nos biens immobilier par Format' | trans}}</h2>
        </div>
        {% include('web/web_home/_format_biens.html.twig') %}
    </section>
    <section>
        <div id="contact" class="d-flex align-content-center flex-center">
            <h3 class="display-4 mb-3 ">Nous contacter</h3>
        </div>
        <div id="typesDispo" class="container" style="padding: 0">

            <iframe
                    src="{{ globalVariables.TheCompany.localisation }}"
                    width="100%"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
        <div class="container">
            <div class="row" style="
            background: #0093E9;
            background: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
            color: #fff;
            min-height: 30px; ">
                <div class="col-12 col-md-6 border-end">

                    <ul class="nav me-auto mb-2 mb-lg-0 mr-20  p-2 " style="flex-direction: row;margin-left: auto;">
                        {% include('web/_partials/_dynamic_topbar_sm.html.twig') %}
                    </ul>
                </div>
                <div class="col-12 col-md-6">
                    <div class="row">
                        <div class="col-12 ">
                            <div class="p-2 d-flex justify-content-center align-items-center btn-group" >
                                <a href="#" class="btn btn-warning " data-bs-toggle="modal" data-bs-target="#etreRapeleModal">
                                    <i class="fa fa-phone-alt"></i>
                                    {{'étre rappelé' | trans}}
                                </a>
                                <a href="#" class="btn btn-danger ">
                                    <i class="fa fa-calendar-alt"></i>
                                    {{ 'prendre un rendez-vous' | trans }}
                                </a>
                            </div>
                        </div>
                        {% include('web/_partials/_modal_form_callback.html.twig') %}
                    </div>


                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid" id="terrain">
           {% include('web/_partials/_hero_el.html.twig') %}
        </div>
    </section>
    <section>
        <div class="container">
            <h3>Nos actualités </h3>
        </div>
    </section>
    <section>
        <div class="container">
            <h3>Pret bancaire ? </h3>
        </div>
    </section>
    <section>
        <div class="container">
            <h3>Gestion locative </h3>
        </div>
    </section>
{% endblock %}

{% block footerscripts %}

{% endblock %}
