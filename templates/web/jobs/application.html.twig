{% extends '/web/base_web.html.twig' %}

{% block body %}

    <header class="header-bg header-bg-one position-relative my-7">
        <div class="bottom-frame"></div>
        <div class="">
            <div class="item">
                <div class="container-fluid d-flex align-items-center justify-content-center">
                    <div class="header-content header-content-white">
                        <h1>{{ 'Job Application' | trans }}</h1>
                        <p>{{ 'Send contact request and we will reach you back' | trans }}  </p>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container mt-5">
        <div class="row">

<div class="col-12 col-md-6">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">{{ 'Job Description' | trans }}</h4>
        </div>
        <div class="card-body">
            <h4>{{ job.publicTitle }}</h4>
            <hr>
            {{ job.text | raw}}
            <hr>
            Offer valid until {{ job.enddate | date('d-m-Y') }}
        </div>
    </div>
</div>
<div class="col-12 col-md-6">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Application Form</h4>
        </div>
        <div class="card-body">
            {{ form(form) }}
        </div>
    </div>
</div>
        </div>


    </div>

{% endblock %}
