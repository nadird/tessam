{% extends 'customer/base_customer.html.twig' %}

{% block body %}
    {% include('customer/_partials/_customer_page_header.html.twig') %}
    <div class="container">
        {{ form_start(form) }}
        <div class="card">
            <div class="card-header">
            {{ 'Edit profile' }}
            </div>
            <div class="card-body">

            {{ form_row(form.address) }}
                <div class="mt-3">
                    {% if customer.picture %}
                        <div class="row">
                            <div class="col-12 col-md-6">
                                {{ form_row(form.picture) }}
                            </div>
                            <div class="col-12 col-md-6">
                                <img src="{{ asset('uploads/customer') }}/{{ customer.picture }}" alt="profile picture" class="img-fluid rounded-circle" width="100">

                            </div>
                        </div>
                    {% else %}
                        {{ form_row(form.picture) }}
                    {% endif %}
                </div>

            {{ form_row(form.pi) }}
            {{ form_row(form.dob) }}
            {{ form_row(form.actNaissance) }}
            </div>
            <div class="card-footer">
            {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
